mixin field(data = {})
	+e.LABEL.field.field__(
		class=`${data.mode ? data.mode : ''} ${data.customAutocomplete ? 'js-autocomplete-field' : ''}`
		data-type=data.customAutocomplete && data.name)&attributes(attributes)
		if data.isTextarea
			+e.TEXTAREA.item(
				name=data.name
				placeholder=data.placeholder)
		else
			+e.INPUT.item(
				type=data.type
				inputmode=data.inputmode
				name=data.name
				placeholder=data.placeholder
				autocomplete=data.customAutocomplete && 'off')
		+e.label #{ data.label }
		if data.customAutocomplete
			+b.autocomplete.autocomplete__(class=`${data.mode ? data.mode : ''} js-autocomplete`)
				+e.wrap.css-scrollbar.flex._column._nowrap
					+e.item 1
