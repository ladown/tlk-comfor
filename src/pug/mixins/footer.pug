mixin footer(data = {})
	+b.FOOTER.footer
		+e.wrap.wrap
			+e.row._top.flex
				+e.cell._info.flex._row._wrap
					+e.A.logo(href='/') ТЛК КОМФОРТ
					+e.A.phone(href=footerData.phone.href) #{ footerData.phone.text }
					+e.text #{ footerData.text }
					+e.A.email(href=footerData.email.href) #{ footerData.email.text }
					+e.socials.flex._vertical
						each item in footerData.social
							+e.A.social.flex(href=item.href)
								+icon(item.iconName, item.iconViewBox)
				+e.cell._nav
					+e.NAV.nav.flex._row._start._justify
						each item in footerData.nav
							+e.nav-cell
								+e.A.nav-label(href=item.label.href) #{ item.label.text }
								+e.nav-items.flex._column._start
									each link in item.links
										+e.A.nav-link(href=link.href) #{ link.text }
					+e.BUTTON.scroll-top.js-scroll-top
						+icon('arrowDown', '0 0 24 24')
			+e.row._bottom.flex._vertical
				p © 2022 ТЛК «Комфорт»
